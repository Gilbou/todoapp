<h1>TodoList</h1>

<div class="notice">
  <%= flash[:notice] %>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="name">Name</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'edit', edit_task_path(task) %> <%= link_to 'delete', task_path(task), method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add a new task', new_task_path %>