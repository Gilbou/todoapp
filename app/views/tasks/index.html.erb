<h1>TodoList</h1>

<div class="notice">
  <%= flash[:notice] %>
</div>

<ul>
<% @tasks.each do |task|%>
  <li><%= link_to task.name, task_path(task) %> // <%= task.priority %> // <%= task.due_date %>// <%= link_to 'edit', edit_task_path(task) %> <%= link_to 'delete', task_path(task), method: :delete%></li>
<% end %>
</ul>

<%= link_to 'add a new task', new_task_path %>